{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "SETUP.md",
      "README.md"
    ],
    "rewrites": [
      { "source": "/page/**", "destination": "/page/index.html" },
      { "source": "**", "destination": "/page/index.html" }
    ]
  }
}
